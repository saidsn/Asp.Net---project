@model Paginate<BlogVM>

@{
    ViewData["Title"] = "Blog Page";
}

<!-- main wrapper start -->
<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Blog</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Blog Left Sidebar</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- blog main wrapper start -->
    <div class="blog-main-wrapper section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 order-2 order-lg-1">
                    <div class="blog-widget-wrapper">
                        <!-- widget item start -->
                        @foreach (var customer in Model.Datas)
                        {
                            @foreach (var customer1 in customer.Customers)
                            {
                                <div class="blog-widget">
                                    <div class="blog-widget-img">
                                        <img src="~/assets/img/blog/@customer1.Image" alt="author thumb" />
                                    </div>
                                    <div class="blog-author-title text-center">
                                        <h5>@customer1.BlogAuthor</h5>
                                        <span>@customer1.Position</span>

                                        <div class="blog-widget-icon">
                                            @foreach (var icon in customer1.Socials)
                                            {
                                                <a href="#"><i class="fa fa-@icon.Image"></i></a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <!-- widget item end -->
                        <!-- widget item start -->
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Search</h4>
                            <form class="widget-search-form">
                                <input placeholder="Search keyword" type="text" class="search-field">
                                <button type="submit" class="search-btn"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                        <!-- widget item end -->
                        <!-- widget item start -->
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Recent Posts</h4>
                            <ul class="recent-posts-inner">
                                @foreach (var post in Model.Datas)
                                {
                                    @foreach (var post1 in post.ResentPosts)
                                    {
                                        <li class="recent-posts">
                                            <div class="recent-posts-image">
                                                <a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@post1.Id"><img src="~/assets/img/blog/@post1.Image" alt="post thumb"></a>
                                            </div>
                                            <div class="recent-posts-body">
                                                <span class="recent-posts-meta">@post1.CreateDate.ToString("dd MMMM yyyy")</span>
                                                <h6 class="recent-posts-title"><a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@post1.Id">@post1.Title</a></h6>
                                            </div>
                                        </li>
                                    }
                                }


                            </ul>
                        </div>
                        <!-- widget item end -->
                        <!-- widget item start -->
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Categories</h4>
                            <ul class="blog-categories">
                                <li><a href="blog-details.html">Shoes</a><span>(20)</span></li>
                                <li><a href="blog-details.html">Fashion</a><span>(18)</span></li>
                                <li><a href="blog-details.html">Wallet</a><span>(40)</span></li>
                                <li><a href="blog-details.html">Life Style</a><span>(66)</span></li>
                                <li><a href="blog-details.html">Electronics</a><span>(66)</span></li>
                                <li><a href="blog-details.html">Jewellery & Cosmetics</a><span>(30)</span></li>
                            </ul>
                        </div>
                        <!-- widget item end -->
                        <!-- widget item start -->
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">Tags</h4>
                            <div class="blog-tag">
                                @foreach (var tag in Model.Datas)
                                {
                                    @foreach (var tag1 in tag.Tags)
                                    {
                                        <a asp-controller="BlogDetail" asp-action="Index">@tag1.TagName</a>

                                    }
                                }

                            </div>
                        </div>
                        <!-- widget item end -->
                    </div>
                </div>
                <div class="col-lg-9 order-1 order-lg-2">
                    <div class="row">
                        @foreach (var blog in Model.Datas)
                        {
                            @foreach (var blog1 in blog.Blogs)
                            {
                                <div class="col-md-6">
                                    <!-- blog single item start -->
                                    <div class="blog-post-item mb-30">
                                        <div class="blog-thumb">
                                            <a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@blog1.Id">
                                                <img src="~/assets/img/blog/@blog1.Image" alt="blog thumb">
                                            </a>
                                        </div>
                                        <div class="blog-content">
                                            <h5 class="blog-title">
                                                <a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@blog1.Id">
                                                    @blog1.Title
                                                </a>
                                            </h5>
                                            <ul class="blog-meta">
                                                <li><span>By: </span>@blog1.Admin</li>
                                                <li><span>On: </span>@blog1.CreateDate</li>
                                            </ul>
                                            <a href="blog-details.html" class="read-more">Read More...</a>
                                        </div>
                                    </div>
                                    <!-- blog single item start -->
                                </div>

                            }
                        }
                        <div class="col-md-6">
                            <!-- blog single item start -->
                            <div class="blog-post-item mb-30">
                                <div class="blog-thumb embed-responsive embed-responsive-16by9">
                                    <iframe src="https://www.youtube.com/embed/4qNHr0W6F0o" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </div>
                                <div class="blog-content">
                                    <h5 class="blog-title">
                                        <a href="blog-details.html">
                                            Children Left Home Alone For 4 Days In TV Series Experiment
                                        </a>
                                    </h5>
                                    <ul class="blog-meta">
                                        <li><span>By: </span>Admin,</li>
                                        <li><span>On: </span>14.07.2029</li>
                                    </ul>
                                    <a href="blog-details.html" class="read-more">Read More...</a>
                                </div>
                            </div>
                            <!-- blog single item start -->
                        </div>
                        <div class="col-md-6">
                            <!-- blog single item start -->
                            <div class="blog-post-item mb-30">
                                <div class="blog-thumb embed-responsive embed-responsive-16by9">
                                    <iframe src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/501298839&amp;color=%23ff5500&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=true&amp;show_reposts=false&amp;show_teaser=true&amp;visual=true"></iframe>
                                </div>
                                <div class="blog-content">
                                    <h5 class="blog-title">
                                        <a href="blog-details.html">
                                            People Are Willing Lie When To Comes Money Research from
                                        </a>
                                    </h5>
                                    <ul class="blog-meta">
                                        <li><span>By: </span>Admin,</li>
                                        <li><span>On: </span>14.07.2029</li>
                                    </ul>
                                    <a href="blog-details.html" class="read-more">Read More...</a>
                                </div>
                            </div>
                            <!-- blog single item start -->
                        </div>

                    </div>
                    <!-- start pagination area -->
                    <nav class="my-5" aria-label="Page navigation example">
                        <ul class="pagination justify-content-center my-5">
                            <li class="page-item @(Model.HasPrevious == false ? "disabled":"")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Currentpage - 1)"><i class="ion-ios-arrow-left"></i></a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPage; i++)
                            {
                                <li class="page-item @(i==Model.Currentpage ? "disabled":"")"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                            }

                            <li class="page-item @(Model.HasNext == true ? "":"disabled")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Currentpage + 1)"><i class="ion-ios-arrow-right"></i></a>
                            </li>
                        </ul>
                    </nav>
                    <!-- end pagination area -->
                </div>
            </div>
        </div>
    </div>
    <!-- blog main wrapper end -->
</main>
<!-- main wrapper end -->
