@model LoginVM
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Login";
}
<!-- Login Content Start -->
<div class="login-register-wrapper section-padbding">
    <div class="container ">
        <div class="member-area-from-wrap  " style="text-align:center">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login-reg-form-wrap mb-5">
                        <div class="text-danger mb-2 mt-3" asp-validation-summary="All"></div>
                        <h2>Sign In</h2>
                        <form asp-controller="Account" asp-action="Login" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="single-input-item">
                                <input asp-for="UserNameorEmail" placeholder="Email or Username" required />
                                <span class="text-danger" asp-validation-for="UserNameorEmail"></span>
                            </div>
                            <div class="single-input-item">
                                <input asp-for="Password" placeholder="Password" required />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="forgot my-3 ">
                                <a asp-controller="Account" asp-action="ForgotPassword">Forgot password ?</a>
                            </div>
                            @*<div class="single-input-item">
                                    <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                        <div class="remember-meta">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="rememberMe">
                                                <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                            </div>
                                        </div>
                                        <a href="#" class="forget-pwd">Forget Password?</a>
                                    </div>
                                </div>*@
                            <div class="single-input-item">
                                <button class="btn">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
