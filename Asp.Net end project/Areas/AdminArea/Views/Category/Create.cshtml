@model Categories
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row my-5">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 style="color:blue; text-align:center">- Create Category -</h3>

                    <form asp-controller="Category" asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div>
                                <label for="exampleInputUsername1">Name</label>
                                <textarea class="form-control rounded-0" asp-for="Name" id="Name-area" rows="10"></textarea>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Create</button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("Name-area")
    </script>
}

