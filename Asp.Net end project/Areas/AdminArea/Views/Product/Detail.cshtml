@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="table-responsive pt-3">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        DiscountPrice
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        SellerCount
                    </th>
                    <th>
                        Category
                    </th>
               
                </tr>

            </thead>
            <tbody>
                <tr class="table-info">
                    <td>
                        <img style="width:100px; height:100px;border-radius:0 !important " src="~/assets/img/product/@Model.ProductImages.FirstOrDefault(m=>m.IsMain)?.Image" alt="slider" />
                    </td>
                    <td>
                        @Model.Title
                    </td>
                    <td>
                        $@Model.Price.ToString("##.00")
                    </td>
                    <td>
                        $@((Model.Price-((Model.Price * Model.DiscountPrice)/100)).ToString("##.00"))
                    </td>
                    <td>
                        @Model.Description
                    </td>
                    <td>
                        @Model.SellerCount
                    </td>
                    <td style="width:350px">
                        @Model.Categories.Name
                    </td>

                </tr>

            </tbody>
        </table>
    </div>

    <a asp-controller="Product" asp-action="Index" class="btn btn-primary my-3">Back</a>
</div>

