@model SingleBanner
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid my-3 mx-3">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title" style="text-align:center;color:blue">- Index -</h2>
           
                <div class="table-responsive pt-3">
                    @if (ViewBag.count == 0)
                    {
                        <div class="create-btn mb-3">
                            <a  asp-controller="SingleBanner" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
                        </div>
                    }
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                <tr class="table-info">
                                    <td>
                                        <img style="width:150px; height:150px;border-radius:0 !important " src="~/assets/img/banner/@Model.Image" alt="Singlebanner" />
                                    </td>
                                    <td id="parent-image" style="text-align: center;">
                                        <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-info"><i class="mdi mdi-information mx-0 text-white"></i></a>
                                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                        <form id="parent-image" style="display: inline-block;" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                            <button data-id="@Model.Id" type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

